# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-for-production
DEBUG=True
DJANGO_PORT=8000
DAPHNE_PORT=8001
FRONTEND_PORT=3000
HOST=0.0.0.0

# Database Configuration
# Set to 'true' to use PostgreSQL, 'false' or unset to use SQLite
